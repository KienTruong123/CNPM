<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Rice Agent System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["UserName"] != null)
                {

                    <li> @Html.ActionLink("My cart", "MyCart", "Home", new { @username = @Session["UserName"] }, new { }) </li>
                    <li> <span class="glyphicon glyphicon-shopping-cart"> </span></li>
                    <li>@Html.ActionLink("Logout", "LogOut", "Home") </li>
                }
                else
                {
                    <li>@Html.ActionLink("Login", "Login", "Home") </li>
                    <li> <span class="glyphicon glyphicon-log-in"> </span> </li>
                }
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Truong Dinh Kien - Tran Si Nguyen</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
